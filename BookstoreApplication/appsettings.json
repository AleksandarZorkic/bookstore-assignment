{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",

    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Port=5432;Database=bookStoreApplication;Username=postgres;Password=root"
    },

    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.EntityFrameworkCore": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/log-.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithThreadId", "WithProcessId" ]
    },

    "Jwt": {
        "Key": "w31AjQ14HDyfea6R5W0hsZJ6B8bd/5st9J05M19Lcno=",
        "Issuer": "http://localhost:5234",
        "Audience": "http://localhost:5234",
        "ExpiresInHours": 24
    },

    "GoogleAuth": {
        "ClientId": "",
        "ClientSecret": ""
    },

    "Frontend": {
        "BaseUrl": "http://localhost:5173"
    }
}
